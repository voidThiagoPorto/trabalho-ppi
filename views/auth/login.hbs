  <main class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px; background-color: var(--card-color);">
      <h4 class="text-center mb-3" style="color: var(--accent); font-family: var(--font-main);">Entrar</h4>

      {{#if mensagem}}
      <div class="alert alert-danger text-center py-2">{{mensagem}}</div>
      {{/if}}

      <form action="/login" method="POST">
        <div class="mb-3">
          <label class="form-label" style="color: var(--text-color); font-family: var(--font-main);">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            required
            style="background-color: #1f3310; color: var(--text-color); border: 1px solid var(--accent); font-family: var(--font-main);"
          />
        </div>

        <div class="mb-3">
          <label class="form-label" style="color: var(--text-color); font-family: var(--font-main);">Senha</label>
          <input
            type="password"
            class="form-control"
            name="senha"
            required
            style="background-color: #1f3310; color: var(--text-color); border: 1px solid var(--accent); font-family: var(--font-main);"
          />
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-2" style="font-family: var(--font-main);">Entrar</button>
      </form>

      <a href="/auth/google" class="btn btn-outline w-100 mb-2 text-center" style="font-family: var(--font-main);">
        <i class="fa-brands fa-google me-2"></i> Entrar com Google
      </a>

      <div class="text-center mt-2" style="font-family: var(--font-main); color: var(--accent-light);">
        <a href="/cadastro" class="text-decoration-none" style="color: var(--accent-light);">NÃ£o tem conta? Cadastre-se</a>
      </div>
    </div>
  </main>